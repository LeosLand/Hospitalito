<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leosland.edgar.hospitalito.MainActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Paciente"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nombre Completo"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad paciente"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Edad"
                android:inputType="number"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo paciente"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:hint="Ejemplo@gmail.com"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono paciente"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:hint="(044)"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPostalAddress"
                android:hint="Direccion"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="1" >
                </ImageView>

                <Button
                    android:id="@+id/buttonLoadPicture"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:onClick="loadImagefromGallery"
                    android:text="Cargar imagen" >
                </Button>
            </LinearLayout>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Padecimiento"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="Padecimiento"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha cita"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="date"
                android:hint="yyyy/mm/dd"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora cita"/>
            <EditText
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="time"
                android:hint="HH:MM"/>

        <TextView
            style="@style/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elegir Doctor"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Medicos" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
